rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

 // Event images folder
    match /events/{userId}/{allPaths=**} {
      // Only admins can upload/delete
      allow write: if request.auth != null 
                   && get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      
      // Everyone can view event images
      allow read: if true;
    }

    // Blog images (public read, authenticated write)
    match /blogs/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User profile photos (public read, only owner can write)
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
